{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2023",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "ignoreDeprecations": "5.0"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
